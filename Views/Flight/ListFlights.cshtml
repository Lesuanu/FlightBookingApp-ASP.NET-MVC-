@model IEnumerable<FlightBookingApp.Models.FlightBooking>
@{
    Layout = "_FlightLayout.cshtml";
}

@{
    ViewData["Title"] = "ListFlights";
}

<h1>Flights Booked</h1>

<p>
    <a asp-action="Bookflight" class="btn-success">Book New Flight</a>
</p>
<table class="table" >
    <thead class="col-10">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flight_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flight_Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrival_Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departure_Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Flight_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flight_Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arrival_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departure_Time)
            </td>
            <td>
                <a asp-action="EditFlight" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="FlightDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-action="RemoveFlight" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
