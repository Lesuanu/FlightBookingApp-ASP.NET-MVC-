@model FlightBookingApp.Models.FlightBooking
@{
    Layout = "_FlightLayout.cshtml";
}

@{
    ViewData["Title"] = "RemoveFlight";
}

<h3>Are you sure you want to delete this booking</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Flight_Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight_Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Flight_Class)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Flight_Class)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arrival_Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Arrival_Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departure_Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departure_Time)
        </dd>
    </dl>
    
    <form asp-action="DeleteFlight">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ListFlights">View All Flights</a>
    </form>
</div>
